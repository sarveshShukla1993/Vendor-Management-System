                border-collapse: collapse;
            }

            th, td {
                padding: 5px;
                text-align: left;
            }

            #tblid {
                margin-top: 0px;
            }

            #bdyid {
                margin-top: 10px;
            }

            #abc {
            }

            #lstid {
                margin-left: 105px;
                color: white;
                background-color: darkslategray;
                margin-top: 50px;
            }

            h2 {
                color: maroon;
            }

            #addid {
                margin-left: 750px;
                color: white;
                background-color: darkslategray;
                margin-top: 50px;
            }
            h2{
                margin-left:470px;
            }
