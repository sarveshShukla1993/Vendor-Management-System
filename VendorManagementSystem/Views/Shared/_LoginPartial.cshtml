@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("logout", "RegisteLogin", FormMethod.Get, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li> @Html.ActionLink("Hello! " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" }) </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("StartSelling", "vendor", "RegisteLogin")</li>
        <li>@Html.ActionLink("Login", "VendorLogin", "RegisteLogin")</li>
        <li>@Html.ActionLink("Visitor?", "visitorList", "RegisteLogin")</li>
    </ul>
}
